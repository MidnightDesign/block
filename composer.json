{
    "name": "midnight/block",
    "type": "library",
    "description": "Blocks of (HTML) content",
    "minimum-stability": "stable",
    "license": "MIT",
    "authors": [
        {
            "name": "Rudolph Gottesheim",
            "email": "r.gottesheim@loot.at"
        }
    ],
    "require": {
        "php": "^7.1",
        "ramsey/uuid": "^3.7"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.9.1",
        "phpunit/phpunit": "^7.1"
    },
    "autoload": {
        "psr-4": {
            "Midnight\\Block\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Midnight\\Test\\Block\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    }
}
